{
  "compilerOptions": {
    "outDir": "ts-build",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "target": "es6",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
